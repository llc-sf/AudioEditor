<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/audio_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_27"
        android:text="0 audio"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@id/audio_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/audio_count"
        app:srcCompat="@drawable/ic_muti" />

    <View
        android:id="@+id/space_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_14"
        android:background="@color/white.alpha.10"
        app:layout_constraintBottom_toBottomOf="@id/audio_count"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintTop_toTopOf="@id/audio_count" />

    <ImageView
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="@id/audio_count"
        app:layout_constraintEnd_toStartOf="@id/space_1"
        app:layout_constraintTop_toTopOf="@id/audio_count"
        app:srcCompat="@drawable/icon_sort" />

    <dev.android.player.widget.index.IndexFastScrollRecyclerView
        android:id="@+id/recycleview"
        style="@style/DefaultIndexFastRecyclerviewStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_count" />


    <FrameLayout
        android:id="@+id/play_container"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_66"
        android:background="@drawable/o_ee294d_corner_31"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/recycleview"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_item_play" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

