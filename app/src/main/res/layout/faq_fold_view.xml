<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16"
    tools:background="@color/black">

    <LinearLayout
        android:id="@+id/faq_fold_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_58"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/faq_fold_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_faq_trim_end" />

        <dev.android.player.widget.text.GradientShaderTextView
            android:id="@+id/faq_question_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="How to use the music player?" />

        <ImageView
            android:id="@+id/faq_img_fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="@dimen/dp_16"
            android:checked="false"
            android:src="@drawable/ic_faq_down" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginStart="@dimen/dp_40"
        android:background="@color/white.alpha.10"
        app:layout_constraintBottom_toBottomOf="@id/faq_fold_layout" />

    <FrameLayout
        android:id="@+id/faq_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faq_fold_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>