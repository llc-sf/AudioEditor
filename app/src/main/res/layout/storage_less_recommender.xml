<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insufficient_space"
        android:textColor="?attr/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:text="@string/music3_free_space_to_ensure"
        android:textColor="?attr/textColorSecondary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="· Remaining：60.0M" />

    <TextView
        android:id="@+id/required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:textColor="@color/color_337CFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="· Required：80.0M" />

    <dev.android.player.widget.text.CornersButton
        android:id="@+id/free"
        style="@style/CornButton.Solid"
        android:layout_width="match_parent"
        android:layout_height="?attr/ConnerBtnHeight"
        android:layout_marginTop="@dimen/dp_36"
        android:gravity="center"
        android:text="@string/free_up_space"
        android:textColor="?attr/textColorPrimary"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</LinearLayout>