<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    tools:parentTag="android.widget.RelativeLayout">

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_30"
        android:textColor="@color/white.alpha.25"
        android:textSize="@dimen/sp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00" />

    <SeekBar
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_24"
        android:layout_marginHorizontal="@dimen/dp_6"
        android:max="100"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:theme="@style/ColorAccentSeekBarStyleTheme"
        android:thumb="@drawable/o_ee294d_corner_31"
        app:layout_constraintBottom_toBottomOf="@id/current_time"
        app:layout_constraintEnd_toStartOf="@id/durationTime"
        app:layout_constraintStart_toEndOf="@id/current_time"
        app:layout_constraintTop_toTopOf="@id/current_time"
        tools:progress="0" />

    <TextView
        android:id="@+id/durationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_30"
        android:textColor="@color/white.alpha.25"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/current_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/progress"
        app:layout_constraintTop_toTopOf="@id/current_time"
        tools:text="02:30" />

</androidx.constraintlayout.widget.ConstraintLayout>