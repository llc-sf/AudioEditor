<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:minWidth="320dp"
    tools:parentTag="android.widget.RelativeLayout">


    <View
        android:id="@+id/ic_selected"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ic_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_folder" />

    <ImageView
        android:id="@+id/ic_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_folder" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white.alpha.90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/audio_count"
        app:layout_constraintStart_toEndOf="@id/ic_folder"
        app:layout_constraintTop_toTopOf="@id/ic_folder" />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="-1dp"
        android:textColor="@color/white.alpha.40"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/ic_folder"
        app:layout_constraintStart_toEndOf="@id/ic_folder" />


    <TextView
        android:id="@+id/audio_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/rect_5ffffff_corner_27"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_2"
        android:textColor="@color/white.alpha.60"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@id/ic_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_folder" />
</androidx.constraintlayout.widget.ConstraintLayout>