<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MusicTheme.AppBarVideo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_search">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_round_search_edit"
            android:minHeight="@dimen/dp_38"
            android:orientation="horizontal">

            <dev.android.player.widget.text.EditText
                android:id="@+id/query"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search_audio"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_20"
                android:singleLine="true"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="@color/black.a1.alpha50"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_10"
                android:src="@drawable/ic_search_grey" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:visibility="gone"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_8"
                android:src="@drawable/ic_search_clear" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/containView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>