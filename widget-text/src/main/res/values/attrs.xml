<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆角Button-->
    <declare-styleable name="CornersButton">
        <!--是否使用自定义的Drawable-->
        <attr name="corner_btn_drawable" format="reference" />
        <attr name="conner_btn_stroke_color" format="reference|color" />
        <attr name="conner_btn_stroke_width" format="reference|dimension" />
        <attr name="conner_btn_solid_color" format="reference|color" />
        <attr name="conner_btn_ripple_color" format="reference|color" />
        <attr name="conner_btn_radius" format="reference|dimension" />
        <attr name="conner_btn_is_center" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GradientShaderTextView">
        <attr name="gradient_start" format="color" />
        <attr name="gradient_end" format="color" />
        <attr name="gradient_colors" format="reference" />
        <attr name="gradient_orientation" format="enum">
            <enum name="left_right" value="0" />
            <enum name="top_bottom" value="1" />
            <enum name="right_top" value="2" />
            <enum name="bottom_top" value="3" />
            <enum name="left_top_right_bottom" value="4" />
            <enum name="right_top_left_bottom" value="5" />
            <enum name="left_bottom_right_top" value="6" />
            <enum name="right_bottom_left_top" value="7" />
        </attr>
    </declare-styleable>
</resources>