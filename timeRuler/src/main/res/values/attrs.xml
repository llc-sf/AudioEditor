<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseScaleBar">
        <!--关键刻度高度-->
        <attr name="keyTickHeight" format="dimension|reference" />
        <!--文字偏移-->
        <attr name="tickValueOffset" format="dimension|reference" />
        <!--普通刻度与关键刻度比率-->
        <attr name="normalTickRatio" format="float" />
        <!--游标相对view width的位置  0～ 1 -->
        <attr name="cursorPosition" format="float" />
        <!--刻度尺横线相对view height的位置 0~1-->
        <attr name="baselinePosition" format="float" />
        <!--刻度线颜色-->
        <attr name="tickColor" format="color|reference" />
        <!--是否显示刻度横线-->
        <attr name="showTickLine" format="boolean" />
        <!--是否显示游标线-->
        <attr name="showCursorLine" format="boolean" />
        <!-- 是否显示刻度值-->
        <attr name="showTickValue" format="boolean" />
        <!-- 刻度线开口方向-->
        <attr name="tickDirectionUp" format="boolean" />
        <!--游标线颜色-->
        <attr name="cursorLineColor" format="color|reference" />
        <!--currentPlaying 播放条刻度字体大小-->
        <attr name="playingTextSize" format="dimension|reference" />
        <!--currentPlaying 播放条底部三角形变成-->
        <attr name="triangleSideLength" format="dimension|reference" />

        <!--View 顶部padding-->
        <attr name="topPadding" format="dimension|reference" />
        <!--View 底部padding-->
        <attr name="bottomPadding" format="dimension|reference" />

        <!--音波高度-->
        <attr name="waveHeight" format="dimension|reference" />

        <!--刻度值颜色-->
        <attr name="tickValueColor" format="color|reference" />
        <!--刻度值大小-->
        <attr name="tickValueSize" format="dimension|reference" />
        <!--是否绘制游标-->
        <attr name="drawCursorContent" format="boolean" />
        <!--游标背景颜色-->
        <attr name="cursorBackgroundColor" format="color|reference" />
        <!--游标值大小-->
        <attr name="cursorValueSize" format="dimension|reference" />
        <!--颜色刻度尺背景-->
        <attr name="colorScaleBackground" format="color|reference" />
    </declare-styleable>


    <!--Number Pick-->
    <declare-styleable name="NumberPickerView">
        <!--set number of item displayed, default is 3-->
        <attr name="npv_ShownCount" format="reference|integer" />
        <!--set if show divider, default is true-->
        <attr name="npv_ShowDivider" format="reference|boolean" />
        <attr name="npv_DividerColor" format="reference|color" />
        <attr name="npv_DividerMarginLeft" format="reference|dimension" />
        <attr name="npv_DividerMarginRight" format="reference|dimension" />
        <attr name="npv_DividerHeight" format="reference|dimension" />
        <attr name="npv_TextColorNormal" format="reference|color" />
        <attr name="npv_TextColorSelected" format="reference|color" />
        <attr name="npv_TextColorHint" format="reference|color" />
        <attr name="npv_TextSizeNormal" format="reference|dimension" />
        <attr name="npv_TextSizeSelected" format="reference|dimension" />
        <attr name="npv_TextSizeHint" format="reference|dimension" />
        <attr name="npv_TextArray" format="reference" />
        <attr name="npv_MinValue" format="reference|integer" />
        <attr name="npv_MaxValue" format="reference|integer" />
        <attr name="npv_WrapSelectorWheel" format="reference|boolean" />
        <attr name="npv_RespondChangeOnDetached" format="reference|boolean" />
        <attr name="npv_HintText" format="reference|string" />
        <attr name="npv_EmptyItemHint" format="reference|string" />
        <attr name="npv_MarginStartOfHint" format="reference|dimension" />
        <attr name="npv_MarginEndOfHint" format="reference|dimension" />
        <attr name="npv_ItemPaddingHorizontal" format="reference|dimension" />
        <attr name="npv_ItemPaddingVertical" format="reference|dimension" />
        <attr name="npv_RespondChangeInMainThread" format="reference|boolean" />
        <attr name="npv_TextEllipsize" format="reference|string" />
        <attr name="npv_SelectedItemBackground" format="reference" />

        <!--just used to measure maxWidth for wrap_content without hint,
            the string array will never be displayed.
            you can set this attr if you want to keep the wraped numberpickerview
            width unchanged when alter the content list-->
        <attr name="npv_AlternativeTextArrayWithMeasureHint" format="reference" />
        <attr name="npv_AlternativeTextArrayWithoutMeasureHint" format="reference" />
        <!--the max length of hint content-->
        <attr name="npv_AlternativeHint" format="reference|string" />
    </declare-styleable>


    <declare-styleable name="CustomActionView">
        <attr name="leftDrawable" format="reference" />
        <attr name="rightDrawable" format="reference" />
        <attr name="left_icon_left_padding" format="dimension" />
        <attr name="left_icon_right_padding" format="dimension" />
        <attr name="right_icon_left_padding" format="dimension" />
        <attr name="right_icon_right_padding" format="dimension" />
        <attr name="top_padding" format="dimension" />
        <attr name="bottom_padding" format="dimension" />
        <attr name="click_time_gap" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomActionTextView">
        <attr name="text_leftDrawable" format="reference" />
        <attr name="text_rightDrawable" format="reference" />
        <attr name="text_left_icon_left_padding" format="dimension" />
        <attr name="text_left_icon_right_padding" format="dimension" />
        <attr name="text_right_icon_left_padding" format="dimension" />
        <attr name="text_right_icon_right_padding" format="dimension" />
        <attr name="text_top_padding" format="dimension" />
        <attr name="text_bottom_padding" format="dimension" />
        <attr name="text_click_time_gap" format="string" />
    </declare-styleable>


    <declare-styleable name="RippleButton">
        <attr name="ripplebutton_rippleStrokeWidth" format="dimension" />
        <attr name="ripplebutton_radius" format="dimension" />
        <attr name="ripplebutton_text_bg" format="reference" />
        <attr name="ripplebutton_padding" format="dimension" />
        <attr name="ripplebutton_annimation_duration" format="string" />
        <attr name="ripplebutton_text_content" format="string" />
        <attr name="ripplebutton_text_size" format="dimension" />
        <attr name="ripplebutton_text_color" format="reference" />
    </declare-styleable>

</resources>