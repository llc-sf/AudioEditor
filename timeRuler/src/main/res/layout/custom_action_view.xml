<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_14ffffff_corner_46"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingVertical="@dimen/dp_5">


    <ImageView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom Out"
        app:layout_constraintEnd_toStartOf="@id/middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_zoom_out" />

    <View
        android:id="@+id/middle"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_14"
        android:layout_marginHorizontal="@dimen/dp_14"
        android:background="@color/white.alpha.15"
        app:layout_constraintBottom_toBottomOf="@id/left"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toTopOf="@id/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom In"
        app:layout_constraintBottom_toBottomOf="@id/left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/middle"
        app:layout_constraintTop_toTopOf="@id/left"
        app:srcCompat="@drawable/ic_zoom_in" />


</androidx.constraintlayout.widget.ConstraintLayout>